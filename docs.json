{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Audixa Documentation",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "api": {
    "mdx": {
      "server": "https://api.audixa.ai/v3",
      "auth": {
        "method": "key",
        "name": "x-api-key"
      }
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "API Guides",
            "pages": [
              "guides/authentication",
              "guides/rate-limits",
              "guides/error-codes",
              "guides/pricing",
              "guides/voice-library",
              "guides/ai-models"
            ]
          },
          {
            "group": "SDKs",
            "pages": [
              "sdks/python",
              "sdks/nodejs"
            ]
          },
          {
            "group": "Dashboard",
            "pages": [
              "features/tts",
              "features/custom-voices",
              "features/generations",
              "features/billing",
              "features/account",
              "features/affiliate"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/tts",
              "api-reference/generation",
              "api-reference/history",
              "api-reference/voices"
            ]
          },
          {
            "group": "Streaming",
            "pages": [
              "api-reference/streaming"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://audixa.ai/dashboard",
          "icon": "gauge"
        },
        {
          "anchor": "Website",
          "href": "https://audixa.ai",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@audixa.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://audixa.ai/dashboard"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/audixaai",
      "github": "https://github.com/audixaai"
    }
  }
}
